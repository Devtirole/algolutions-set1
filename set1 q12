
#include <stdio.h>

void halfDiamondStar(int N) 
{ 
    int i, j; 
    for (i = 0; i < N; i++) 
    { 
        for (j = 0; j < i + 1; j++) 
            printf("*"); 
        printf("\n"); 
    } 
  
    for (i = 1; i < N; i++) 
    { 
        for (j = i; j < N; j++) 
             printf("*"); 
        printf("\n"); 
    } 
} 

int main() 
{ 
    int N = 5; 
    halfDiamondStar(N); 
}
